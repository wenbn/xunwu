                vo.setMessage(ResultConstant.SYS_REQUIRED_FAILURE_VALUE);
            }
        }catch (Exception e){
            e.printStackTrace();
            vo.setResult(ResultConstant.SYS_REQUIRED_TIMEOUT_ERROR);
            vo.setMessage(ResultConstant.SYS_REQUIRED_TIMEOUT_ERROR_VALUE);
        }finally {
            return vo;
        }
    }

